<div class="table-responsive" id="swup">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Lp.</th>
                <th>Identifier</th>
                <th>Product</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {% for item in pagination.results %}
                <tr>
                    <td>{{ loop.index + ((pagination.pageNumber - 1) * pagination.resultsPerPage )}}</td>
                    <td>{{ item.identifier }}</td>
                    <td>
                        {% if item.product %}
                            <a href="{{ path('app_product_show', {'id': item.product.id}) }}"
                               class="text-decoration-none" target="_blank">
                                {{ item.product.name }}
                            </a>
                        {% else %}
                            Brak przypisanego produktu
                        {% endif %}
                    </td>
                    <td>{{ item.status }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% include "shared/pagination/_bootstrap_widget.html.twig" %}
</div>
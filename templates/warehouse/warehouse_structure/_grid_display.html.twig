{% for row in treeElements|batch(4) %}
    <div class="row">
        {% for element in row %}
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="card-materialize">
                    <div class="card-materialize-stacked">
                        <div class="card-materialize-content">
                            <h4 class="text-center">{{ element.name }}</h4>
                            <div>
                                <button class="btn btn-outline-success width-40 mb-1">Otwórz</button>
                                <button class="btn btn-outline-info width-58 mb-1">Ustaw jako pojemnik</button>
                            </div>
                            <div>
                                <button class="btn btn-outline-warning width-54 mb-1">Zablokuj</button>
                                <button class="btn btn-outline-danger width-44 mb-1">Usuń</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endfor %}
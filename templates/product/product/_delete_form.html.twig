<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" class="display-inline"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-outline-danger">{{ "delete"|trans|capitalize }}</button>
</form>
